{
  "name": "@seg-fe/smart-ui",
  "version": "0.0.1",
  "description": "基于 Vue 的UI组件库",
  "main": "lib/smart-ui.umd.min.js",
  "keyword": "UI vue-cli3 vue",
  "private": false,
  "license": "MIT",
  "scripts": {
    "lib": "vue-cli-service build --target lib --name smart-ui --dest lib packages/main.js",
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "publish": "npm run lib && node scripts/publish.js",
    "docs:dev": "vuepress dev examples/docs",
    "docs:build": "vuepress build examples/docs",
    "deploy": "gh-pages -d dist",
    "deploy:build": "npm run docs:build && gh-pages -d dist"
  },
  "dependencies": {
    "core-js": "^2.6.5",
    "countup": "^1.8.2",
    "element-ui": "^2.12.0",
    "fs": "^0.0.1-security",
    "markdown-it-container": "^2.0.0",
    "node-sass": "^4.12.0",
    "sass-loader": "^8.0.0",
    "shelljs": "^0.8.3",
    "vue": "^2.6.10",
    "vue-markdown-loader": "^2.4.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.11.0",
    "@vue/cli-plugin-eslint": "^3.11.0",
    "@vue/cli-service": "^3.11.0",
    "@vuepress/plugin-active-header-links": "^1.0.0-rc.1",
    "@vuepress/plugin-back-to-top": "^1.0.0-rc.1",
    "@vuepress/plugin-nprogress": "^1.0.0-rc.1",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.0.0",
    "gh-pages": "^2.1.1",
    "vue-template-compiler": "^2.6.10",
    "vuepress": "^1.0.4"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {
      "no-console": "off",
      "no-alert": 0,
      "no-debugger": "off"
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ]
}
